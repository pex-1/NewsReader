<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/screen1"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/screen1"
        android:name="practice.newsreader.ui.fragments.news.NewsFragment"
        android:label="Screen1" >
        <action
            android:id="@+id/action_details_screen"
            app:destination="@id/screen2" />
    </fragment>
    <fragment
        android:id="@+id/screen2"
        android:name="practice.newsreader.ui.fragments.details.DetailsFragment"
        android:label="Screen2" >
        <argument
            android:name="article"
            app:argType="practice.newsreader.data.model.Article"
            app:nullable="true" />
    </fragment>
</navigation>